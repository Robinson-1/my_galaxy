#:import game game

ScreenManager:
    StartWindow:
    GameWindow:

<StartWindow>:
    name: "menu"
    canvas.before:
        Rectangle:
            size: self.size
            source: 'images/bg1.jpg'
    Label:
        font_size: dp(60)
        font_name: 'fonts/Sackers-Gothic-Std-Light.ttf'
        text: root.menu_title
        pos_hint: { "center_x": .5, "center_y": .6}
    Button:
        font_size: dp(22)
        font_name: 'fonts/Eurostile.ttf'
        text: root.play_button_title
        pos_hint: { "center_x": .5, "center_y": .32}
        size_hint: .2, .2
        on_release: 
            app.root.current = "game"
        background_normal: ''
        background_color: 0, 0, 0, 0
        color: 1, .3, .4, .85
    Button:
        font_size: dp(22)
        font_name: 'fonts/Eurostile.ttf'
        text: 'Highscores'
        pos_hint: { "center_x": .1, "center_y": .1}
        size_hint: .1, .15
        on_release: root.open_popup()
        background_color: 0, 0, 0, 0
        color: 1, .3, .4, .85

<GameWindow>:
    name: "game"
    GameWidget:
        id: GameWidget

<ScorePopup>:
    id: score_popup
    size_hint: .8, .8
    auto_dismiss: False
    title: 'Options'
    title: 'Highscores'
    Button:
        text: 'Welcome'
        on_press: score_popup.dismiss()